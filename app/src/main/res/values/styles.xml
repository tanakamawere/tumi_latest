<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="primaryTitleColor">@color/primaryTitleColor</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowIcons</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_back_24</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="title">@string/appName</item>
        <item name="titleTextColor">@color/colorPrimaryDark</item>
        <item name="titleTextStyle">@font/montserrat_semi_bold_italic</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavigationTheme">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/noneSelectedBottomNav</item>
        <item name="iconTint">@color/colorPrimary</item>
    </style>

    <style name="MyOverflowIcons" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorPrimaryDark</item>
    </style>

    <style name="NormalTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
    </style>

    <style name="ToolbarTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/giantTextSize</item>
    </style>

    <style name="FinancesLandingButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="BorderlessButtons" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SearchTextStyle">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:enabled">true</item>
        <item name="android:hint">Search</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:maxLength">20</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
</resources>


