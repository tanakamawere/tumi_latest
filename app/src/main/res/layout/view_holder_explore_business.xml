<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/standard_200"
    android:layout_height="@dimen/standard_100"
    android:layout_marginStart="@dimen/standard_1"
    android:layout_marginEnd="@dimen/standard_1"
    android:layout_marginBottom="@dimen/standard_5"
    app:cardBackgroundColor="@color/colorBackground"
    app:cardCornerRadius="@dimen/standard_20">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/viewHolderBusinessPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/road_into_the_distance" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_shade" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="@dimen/standard_5">

            <TextView
                android:id="@+id/viewHolderBusinessNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/montserrat_bold"
                android:text="John Doe"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/headerTextSize" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/standard_1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/standard_5"
                    android:layout_marginEnd="@dimen/standard_5"
                    android:background="@color/colorWhite" />

                <TextView
                    android:id="@+id/viewHolderBusinessCategoryTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Example"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/normalTextSize" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>