<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exploreDrawerLayout"
    android:layout_width="@dimen/standard_300"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_10"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Options"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/headerTextSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/standard_5"
            android:background="@color/colorGray" />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/exploreDrawerNavView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fitsSystemWindows="true"
            app:menu="@menu/you_menu" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>