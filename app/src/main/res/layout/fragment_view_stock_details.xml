<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?actionBarSize"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_5"
        android:background="@color/colorGrayBackground"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/standard_20"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Product details"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/headerPlusSize" />

        <TextView
            android:id="@+id/sellingPriceStockDisplayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/standard_10"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Selling Price"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/headerPlusSize" />

        <TextView
            android:id="@+id/titleStockDisplayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/standard_10"
            android:fontFamily="@font/montserrat_bold"
            android:text="Title"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textBigSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="90">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="15"
                android:background="@drawable/button_red_primary">

                <ImageButton
                    android:id="@+id/deleteProductButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/standard_12"
                    android:background="@drawable/ic_baseline_delete_24"
                    android:scaleType="centerCrop" />

            </FrameLayout>

            <Button
                android:id="@+id/editProductButton"
                style="@style/NormalTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="30"
                android:background="@drawable/button_blue_primary"
                android:text="Edit" />

            <Button
                android:id="@+id/advertiseProductButton"
                style="@style/NormalTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="45"
                android:background="@drawable/button_blue_primary"
                android:text="Advertise" />

        </LinearLayout>

        <Button
            android:id="@+id/sellProductButton"
            style="@style/NormalTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_blue_primary"
            android:text="Sell Product" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_60"
        android:layout_margin="@dimen/standard_5"
        android:background="@drawable/dashboard_info_bg"
        android:orientation="vertical"
        android:padding="@dimen/standard_1"
        android:weightSum="2">

        <TextView
            android:id="@+id/quantityStockDisplayTextView"
            style="@style/NormalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/moneyValuesPlaceHolder"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/headerTextSize" />

        <TextView
            style="@style/NormalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_regular"
            android:text="Quantity"
            android:textColor="@color/colorLightBlue"
            android:textSize="@dimen/headerTextSize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_60"
        android:layout_margin="@dimen/standard_5"
        android:background="@drawable/dashboard_info_bg"
        android:orientation="vertical"
        android:padding="@dimen/standard_1"
        android:weightSum="2">

        <TextView
            android:id="@+id/buyingPriceStockDisplayTextView"
            style="@style/NormalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/moneyValuesPlaceHolder"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/headerTextSize" />

        <TextView
            style="@style/NormalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_regular"
            android:text="Buying Price"
            android:textColor="@color/colorLightBlue"
            android:textSize="@dimen/headerTextSize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_60"
        android:layout_margin="@dimen/standard_5"
        android:background="@drawable/dashboard_info_bg"
        android:orientation="vertical"
        android:padding="@dimen/standard_1"
        android:weightSum="2">

        <TextView
            android:id="@+id/totalStockDisplayTextView"
            style="@style/NormalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/moneyValuesPlaceHolder"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/headerTextSize" />

        <TextView
            style="@style/NormalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_regular"
            android:text="Total Value"
            android:textColor="@color/colorLightBlue"
            android:textSize="@dimen/headerTextSize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_60"
        android:layout_margin="@dimen/standard_5"
        android:background="@drawable/dashboard_info_bg"
        android:orientation="vertical"
        android:padding="@dimen/standard_1"
        android:weightSum="2">

        <TextView
            android:id="@+id/totalGrossProfitDisplayTextView"
            style="@style/NormalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/moneyValuesPlaceHolder"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/headerTextSize" />

        <TextView
            style="@style/NormalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_regular"
            android:text="Expected Gross Profit"
            android:textColor="@color/colorLightBlue"
            android:textSize="@dimen/headerTextSize" />

    </LinearLayout>

</LinearLayout>