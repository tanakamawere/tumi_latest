<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/standard_1">

        <TextView
            android:id="@+id/receivedMessageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/montserrat_regular"
            android:text="Date"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/normalTextSize" />

        <TextView
            android:id="@+id/receivedMessageTime"
            style="@style/NormalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_5"
            android:layout_toEndOf="@+id/receivedMessageDate"
            android:text="Time"
            android:textColor="@color/colorPrimaryDark" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/standard_5">

        <TextView
            android:id="@+id/receivedMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_12"
            android:fontFamily="@font/montserrat_bold"
            android:text="Received"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/headerTextSize" />

    </androidx.cardview.widget.CardView>

</LinearLayout>