<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tmz.tumi">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tumi_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tumi_app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Pictures.UploadPictureActivity" />
        <activity android:name=".Pictures.PictureActivity" />
        <activity
            android:name=".Main.Dashboard.CustomersActivity"
            android:label="@string/title_activity_customers"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Main.Explore.ExploreActivity" />
        <activity android:name=".StartUp.NewUserSliderActivity" />
        <activity
            android:name=".Main.Account.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".Finances.FinancesActivity"
            android:label="@string/title_activity_finances"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Stock.StockActivity" />
        <activity android:name=".Main.Dashboard.DashboardActivity" />
        <activity android:name=".Finances.SaleCartActivity" />
        <activity android:name=".Finances.RecordSaleActivity" />
        <activity android:name=".StartUp.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>